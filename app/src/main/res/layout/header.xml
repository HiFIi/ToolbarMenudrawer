<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFfafafa">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/header_dark_indigo" />

    <com.wisemandesigns.android.widgets.CircularImageView
        android:id="@+id/circularImageView1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/account_circle" />

    <com.kyler.toolbarmenudrawer.ToolbarMenudrawerTextView
        android:id="@+id/myTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/circularImageView1"
        android:layout_toRightOf="@+id/circularImageView1"
        android:text="@string/my_name"
        android:textColor="#fffafafa"
        android:textSize="18.0sp"
        customfontdemo:fontName="Roboto-Regular.ttf" />

    <com.kyler.toolbarmenudrawer.ToolbarMenudrawerTextView
        android:id="@+id/myTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myTextView1"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/circularImageView1"
        android:text="@string/my_email"
        android:textColor="#ffe5e5e5"
        android:textSize="14.0sp"
        customfontdemo:fontName="Roboto-Light.ttf" />

</RelativeLayout>